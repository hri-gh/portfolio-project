generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String
  password String
  imageUrl String?

  @@map("users")
}

model GridContent {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  classes String
  header  String
  icon    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("grid_contents")
}

model Project {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  images        Image[] // Relation to Image model
  name          String
  technologies  String[]
  about         String
  githubLink    String?
  gilabLink     String?
  bitbucketLink String?
  websiteLink   String?
  projectType   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String   @db.ObjectId // Foreign Key to Project
  url       String // URL of the image
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@map("images")
}

model Skill {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String
  name     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

model Certificate {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl     String
  provider     String
  title        String
  providerLogo String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("certificates")
}

model PublicProfile {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl    String?
  profileLink String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("public_profiles")
}

model Badge {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl    String
  profileLink String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("badges")
}

model SocialMedia {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  link     String
  platform String
  logoUrl  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("socialmedia_links")
}

model Color {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  colors      String
  sectionName String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("colors")
}
