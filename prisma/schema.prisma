generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String
  password String
  imageUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Overview {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  header      String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("overview")
}

model AboutMe {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  header      String
  description String
  schools     String[]
  collages    String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about_me")
}

model LearningJourney {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  header      String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("learning_journey")
}

model Project {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  images        Image[] // Relation to Image model
  name          String
  technologies  String[]
  about         String
  githubLink    String
  gilabLink     String?
  bitbucketLink String?
  websiteLink   String?
  projectType   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

model Image {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String  @db.ObjectId // Foreign Key to Project
  url       String // URL of the image

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@map("images")
}

model Skill {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String
  name     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

model Certificate {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl        String
  provider        String
  title           String
  providerLogoUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("certificates")
}

model PublicProfile {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl          String?
  publicProfileLink String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("public_profiles")
}

model Badge {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl    String
  profileLink String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("badges")
}

model SocialMedia {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  link            String
  platformName    String
  platformLogoUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("socialmedia_links")
}

model Color {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  colors      String
  sectionName String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("colors")
}
